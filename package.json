{
  "name": "electron-react-ts",
  "version": "0.0.0",
  "description": "Electron App",
  "license": "",
  "author": "",
  "main": "dist/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "build": "run-s dev:clean build:*",
    "dev:clean": "rimraf dist",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && electron .",
    "build:electron": "cross-env NODE_ENV=\"production\" webpack --progress",
    "build:builder": "ts-node ./builder.ts"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "electron-nice-auto-reload": "^1.3.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
