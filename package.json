{
  "name": "electron-react-ts",
  "productName": "Sample",
  "description": "An Electron boilerplate with hot reloading for React and TypeScript.",
  "version": "1.3.1",
  "license": "MIT",
  "author": {
    "name": "example.com",
    "email": "foo@example.com"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "build": "ts-node ./electron-builder.ts",
    "prod": "cross-env NODE_ENV=\"production\" webpack --progress",
    "dev:tsc": "tsc -w -p tsconfig.main.json",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html && cross-env NODE_ENV=\"development\" electron .",
    "predev": "rimraf dist release",
    "prebuild": "run-s predev prod"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.15",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "cross-env": "^7.0.3",
    "css-loader": "^6.6.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.5",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-search-devtools": "^1.5.3",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.5.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "wait-on": "^6.0.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1"
  }
}
