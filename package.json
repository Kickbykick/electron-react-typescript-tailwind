{
  "name": "electron-react-ts",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "start": "run-p start:webpack start:tsc start:electron",
    "start:electron": "electron .",
    "start:tsc": "tsc -w -p tsconfig.main.json",
    "start:webpack": "cross-env NODE_ENV=\"development\" webpack --watch",
    "clean": "rimraf dist",
    "build:prod": "cross-env NODE_ENV=\"production\" webpack --progress",
    "build:pack": "ts-node ./scripts/build.ts",
    "package": "run-s clean build:prod build:pack"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/mini-css-extract-plugin": "^2.0.1",
    "@types/node": "^16.3.1",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^1.5.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2"
  }
}
